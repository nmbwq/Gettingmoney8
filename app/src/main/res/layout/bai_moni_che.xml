<?xml version="1.0" encoding="utf-8"?>
<money.com.gettingmoney.bai.main.view.ProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pl_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">
        <include layout="@layout/sign_line_view"></include>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="股票名称"
                android:gravity="center"
                style="@style/_black_font_12sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="委托价/均价"
                android:gravity="center"
                style="@style/_black_font_12sp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="委托数/成交数"
                android:gravity="center"
                style="@style/_black_font_12sp"

                />
            <TextView
                android:id="@+id/tv_qubie"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="状态时间"
                android:gravity="center"
                style="@style/_black_font_12sp"

                />
        </LinearLayout>

        <include layout="@layout/sign_line_view"></include>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
            android:id="@+id/mLvShopMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/background"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            ></ListView>

        </android.support.v4.widget.SwipeRefreshLayout>
        

    </LinearLayout>
</money.com.gettingmoney.bai.main.view.ProgressLayout>