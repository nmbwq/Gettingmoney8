<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bai_pingjia_dialog_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="平仓确认"
        android:gravity="center"
        style="@style/_black_font_16sp"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="25dp"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="操作："
             style="@style/_999999_font_14sp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="平仓"
             android:layout_marginLeft="10dp"
             style="@style/_black_font_14sp"
             />
     </LinearLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
              >

              <TextView
                  android:id="@+id/tv_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="操作："
                  style="@style/_999999_font_14sp"
                  />

              <TextView
                  android:id="@+id/tv_daima"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="6000069"
                  style="@style/_black_font_14sp"
                  android:layout_alignParentRight="true"
                  android:paddingRight="10dp"
                  />
              <TextView
                  android:id="@+id/tv_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="鑫哥投资"
                  style="@style/_black_font_14sp"
                  android:layout_toRightOf="@+id/tv_text"
                  android:layout_marginLeft="10dp"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="代码："
                  style="@style/_999999_font_14sp"
                  android:layout_toLeftOf="@+id/tv_daima"
                  android:layout_marginRight="10dp"
                  />
          </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            >

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盈亏："
                style="@style/_999999_font_14sp"
                android:paddingTop="5dp"
                />

            <EditText
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入数量"
                style="@style/_black_font_14sp"
                android:layout_alignParentRight="true"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/tv_text2"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/tv_yingkui"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="524.02（0.43%）"
                style="@style/_black_font_14sp"
                android:layout_toRightOf="@+id/tv_text1"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                />
            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量："
                style="@style/_999999_font_14sp"
                android:layout_toRightOf="@+id/tv_yingkui"
                android:layout_marginLeft="8dp"
                android:paddingTop="5dp"
                />
        </RelativeLayout>
        <include layout="@layout/sign_line_view"></include>

        <TextView
            android:id="@+id/mTxtDialogConfirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="确认"
            android:gravity="center"
            style="@style/_e93030_font_16sp"
            />
        <include layout="@layout/sign_line_view"></include>

        <TextView
            android:id="@+id/mTxtDialogCancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="取消"
            android:gravity="center"
            style="@style/_999999_font_16sp"
            />

    </LinearLayout>
</LinearLayout>
