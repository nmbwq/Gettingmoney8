<?xml version="1.0" encoding="utf-8"?>
<money.com.gettingmoney.bai.main.view.ProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pl_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="44dp">

       <TextView
           android:id="@+id/tv_zhang"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:text="买涨"
           android:gravity="center"
           style="@style/_666666_font_15sp"
           />

       <TextView
           android:id="@+id/tv_die"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:text="买跌"
           android:gravity="center"
           style="@style/_666666_font_15sp"
           />
       <TextView
           android:id="@+id/tv_chi"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:text="持仓"
           android:gravity="center"
           style="@style/_666666_font_15sp"
           />
       <TextView
           android:id="@+id/tv_che"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:text="撤单"
           android:gravity="center"
           style="@style/_666666_font_15sp"
           />
       <TextView
           android:id="@+id/tv_select"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           android:text="查询"
           android:gravity="center"
           style="@style/_666666_font_15sp"
           />


   </LinearLayout>


      <TextView
          android:id="@+id/ll_themecolor_line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/themeColor"
          android:layout_marginLeft="7dp"
          android:layout_marginRight="7dp"
          ></TextView>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></android.support.v4.view.ViewPager>
    </LinearLayout>

</money.com.gettingmoney.bai.main.view.ProgressLayout>